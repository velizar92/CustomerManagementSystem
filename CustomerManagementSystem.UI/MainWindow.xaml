<Window x:Class="CustomerManagementSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerManagementSystem.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#1A237E">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <!-- Logo -->
                    <Image Source="Resources/Images/logo.png" Width="40" Height="50" Margin="10,0,10,0"/>
                    <!-- App Header Text -->
                    <TextBlock Text="Customer Management System"
                       Foreground="White"
                       FontWeight="Bold"
                       TextAlignment="Left"
                       Margin="0,20,20,0"
                       />
                  </StackPanel>
            </Viewbox>
        </Grid>


    <!-- Left navigation (sidebar)-->
        <StackPanel Background="#1A237E" Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <Button Style="{StaticResource SidebarButtonStyle}" Content="Dashboard"/>
            <Button Style="{StaticResource SidebarButtonStyle}" Content="Customers"/>
            <Button Style="{StaticResource SidebarButtonStyle}" Content="Create Customer"/>
            <Button Style="{StaticResource SidebarButtonStyle}" Content="Settings"/>
            <Button Style="{StaticResource SidebarButtonStyle}" Content="About"/>
        </StackPanel>

        <!-- Footer-->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Background="#1A237E">
            <TextBlock Text="© 2026 My Company"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="20"/>
        </Grid>
    </Grid>
    
</Window>
